<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.toku2001.reservation.repository.ReservationMapper">

  <insert id="insert" parameterType="io.github.toku2001.reservation.entity.Reservation">
    INSERT INTO reservations (user_id, item_id, reserved_at)
    VALUES (#{userId}, #{itemId}, #{reservedAt})
  </insert>

  <select id="findById" resultType="io.github.toku2001.reservation.entity.Reservation">
    SELECT id, user_id, item_id, reserved_at
    FROM reservations
    WHERE id = #{id}
  </select>
  
  <delete id="deleteById" parameterType="long">
    DELETE FROM reservations
    WHERE id = #{id}
  </delete>

</mapper>